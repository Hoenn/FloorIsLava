    <event eventtype="3" enumb="0">
      <action>
        <libid>1</libid>
        <id>603</id>
        <kind>7</kind>
        <userelative>0</userelative>
        <isquestion>0</isquestion>
        <useapplyto>-1</useapplyto>
        <exetype>2</exetype>
        <functionname></functionname>
        <codestring></codestring>
        <whoName>self</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Physics Step


//Local vars for current keys
var rkey;
var lkey;
var jkey;
var bkey;
if(gamepad_is_connected(0))
{
    rkey = (gamepad_axis_value(0, gp_axislh) &gt;= .5) || gamepad_button_check(0, gp_padr);
    lkey = (gamepad_axis_value(0, gp_axislh) &lt;= -.5) ||gamepad_button_check(0, gp_padl);
    jkey = gamepad_button_check_pressed(0, gp_face1);
    bkey = gamepad_button_check_pressed(0, gp_select);
}
else //Keyboard
{
    rkey= keyboard_check(vk_right);
    lkey = keyboard_check(vk_left);
    jkey = keyboard_check(vk_space);
    bkey = keyboard_check(vk_escape);
}

//Check if offscreen
if(x &gt; room_width || x &lt; 0 || y &gt; room_height || y &lt; 0)
{
    room_restart();
}

//Check ground
if(place_meeting(x, y+1, obj_wall)) 
{
    //Death
    if(!has_boots)
    {        
        audio_play_sound(snd_burn, 1, false);
        room_restart();
    }
    vspd=0;
    //Jump out of boots
    if(jkey)
    {
        audio_play_sound(snd_boots_off, 1, false);
        has_boots=false;
        vspd = - jspd;
    }
}
else
{
    if(vspd &lt; terminal)
        vspd+=grav;
        
    
}

//Move Right
if(rkey)
{   
    if(hspd &lt; spd)
        hspd+=fric;
    else 
        hspd = spd;
    //Walljump
    if(place_meeting(x-1, y, obj_wall) &amp;&amp; !place_meeting(x, y+1, obj_wall) &amp;&amp; !lkey)
    {
        vspd = -jspd;
    }
}

//Move Left
if(lkey)
{
    if(hspd &gt; -spd)
        hspd -= fric;
    else
        hspd = -spd;
    //Walljump
    if(place_meeting(x+1, y, obj_wall) &amp;&amp; !place_meeting(x, y+1, obj_wall) &amp;&amp; !rkey)
    {
        vspd = -jspd   
    }
}

//Both or no movement keys
if((!rkey &amp;&amp; !lkey) || (rkey &amp;&amp; lkey))
{
    if(hspd != 0)
    {
        if(hspd &lt; 0)
            hspd += fric;
        else
            hspd -= fric;
    }
}

    
//Horizontal Collision
if(place_meeting(x+hspd, y, obj_wall))
{
    while(!place_meeting(x+sign(hspd), y, obj_wall))
    {
        x+=sign(hspd);
    }
    hspd=0;
}

x += hspd;

//Vertical Collisions
if(place_meeting(x, y+vspd, obj_wall))
{
    while(!place_meeting(x, y+sign(vspd), obj_wall))
    {
        y+=sign(vspd);
    }
    vspd=0;
}

y += vspd;



//Update boots
if(has_boots)
{
    if(lkey) 
        my_boots.image_xscale= -1;
    else if(rkey)
        my_boots.image_xscale = 1;
    my_boots.x = x-x_offset;
    my_boots.y = y-y_offset;
}
else
{
    if(vspd==0 &amp;&amp; place_meeting(x, y, obj_boots))
    {
        audio_play_sound(snd_boots_on, 1, false);
        has_boots = true;
    }
}

//Settings Screen
if(bkey)
{
    global.prev_level = room;
    room_goto(menu);
}
</string>
